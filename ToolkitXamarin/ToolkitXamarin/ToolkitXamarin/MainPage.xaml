<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ToolkitXamarin.MainPage"
    Title="Xamarin Comunity Toolkit">
    <ContentPage.Content>
        <Grid RowDefinitions="40,40,40">
            <Grid.Behaviors>
                    <xct:ImpliedOrderGridBehavior />
            </Grid.Behaviors>
            <Label Text="Behaviors Example">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                            Tapped="Tapped_Behaviors"
                            NumberOfTapsRequired="1" />
              </Label.GestureRecognizers>
            </Label>
            <Label Text="Converter Example">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                            Tapped="Tapped_Converter"
                            NumberOfTapsRequired="1" />
              </Label.GestureRecognizers>
            </Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>